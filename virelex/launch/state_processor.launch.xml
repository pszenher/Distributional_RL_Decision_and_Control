<?xml version="1.0" encoding="UTF-8"?>
<?xml-model
  href="https://raw.githubusercontent.com/ros2/design/refs/heads/gh-pages/articles/specs/launch.0.1.1.xsd"
  schematypens="http://www.w3.org/2001/XMLSchema"?>
<launch>

  <arg name="robot_name" default="wamv1"/>
  <arg name="robot_goal"/>
  
  <group>
    <push_ros_namespace namespace="$(var robot_name)"/>
    <node pkg="virelex"
	  exec="state_processor_node"
	  name="state_processor_node_$(var robot_name)"
	  args="$(var robot_name) $(var robot_goal)" />
  </group>
  
</launch>
